#include <stdio.h>
#include <math.h>

int p, w, t, m, a[50], b[50], c[50];
int e;
int nhap()
{
    printf("\nNhap p: ");
    scanf("%d", &p);
    printf("Nhap w: ");
    scanf("%d", &w);
    printf("Nhap cac phan tu trong a: ");
    for (int i = 0; i < 4; i++)
    {
        scanf("%d", &a[i]);
        printf("%d  ", a[i]);
    }
    printf("\nNhap cac phan tu trong b: ");
    for (int i = 0; i < 4; i++)
    {
        scanf("%d", &b[i]);
        printf("%d  ", b[i]);
    }
}

void TruChinhXacBoi()
{
    e = 0;
    int tmp = pow(2, w);
    m = log(p) / log(2) + 1;
    t = (m / w) + 1;
    printf("\nc: ");
    for (int i = t - 1; i >= 0; i--)
    {
        c[i] = a[i] - b[i] - e;
        if (c[i] >= 0)
        {
            if (c[i] > tmp)
            {
                c[i] = c[i] - tmp;
                e = 1;
            }
            else
            {
                e = 0;
            }
        }
        else
        {
            c[i] = c[i] + tmp;
            e = 1;
        }
    }
    
    for (int i = 0; i < t; i++)
    {
        printf("%d  ", c[i]);
    }
    printf("\t voi e=%d", e);
}
void tinh()
{
    int x = 0;
    int newC, tmp;
    m = log(p) / log(2) + 1;
    t = (m / w) + 1;
    printf("\nC': ");
    for (int i = 0; i < t; i++)
    {
        x = x + c[i] * pow(2, w * (t - 1 - i));
    }

    if (e == 1)
    {
        newC = p + x;
        for (int i = t - 1; i >= 0; i--)
        {
            tmp = newC / pow(2, w * i);
            newC = newC - (tmp * pow(2, w * i));
            printf("%d  ", tmp);
        }
    }
    else
    {
        for (int i = 0; i < t; i++)
        {
            printf("%d  ", c[i]);
        }
    }
}
int main(){
    nhap();
    TruChinhXacBoi();
    tinh();
    
}
