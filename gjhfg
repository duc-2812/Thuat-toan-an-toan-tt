#include <stdio.h>
#include <math.h>

int main()
{
    long long p,a;
    int u, v, x1, x2;
    int q, r, x;
    printf("\nNhap p: ");
    scanf("%lld", &p);
    printf("\nNhap a: ");
    scanf("%lld", &a);
    u = a;
    v = p;
    x1 = 1;
    x2 = 0;
    printf("\n %d^-1 mod %d = ", a, p);
    while (u !=1)
    {
        q = v/u;
        r = v - q * u;
        x = x2 - q * x1;
        v = u;
        u = r;
        x2 = x1;
        x1 = x;
    }
    printf("%d ", x1);
    printf("\n\t==============");
}
