#include<stdio.h>
#include<math.h>

int w,t,a[50],b[50],c[50];

int nhap(){
	
	printf("nhap w: ");
	 scanf("%d",&w);
	printf("nhap t: ");
	 scanf("%d",&t);	
	printf("\nCac Phan tu cua a: ");
	for(int i=0;i<4;i++){
		scanf("%d",&a[i]);
			printf("%d, ",a[i]);
	}

	printf("\nCac Phan tu cua b: ");
	for(int i=0;i<4;i++){
		scanf("%d",&b[i]);
		printf("%d, ",b[i]);
	}
}

void tinh(){
	int e=0,i; // epsilo
	int tmp = pow (2,w);	
	for( i=t-1;i>=0;i--){
		
		c[i]=a[i]+b[i]+e;
		if( c[i] > tmp ){
			c[i]= c[i]-tmp;
			e=1;
		printf("\n Voi i= %d thi c=%d, e=%d",(t-1)-i,c[i],e);
		
		}
		else{
			e=0;
			printf("\n Voi i= %d thi c= %d, e=%d",(t-1)-i,c[i],e);
		
		}
	}	
}

int main(){
	nhap();
	tinh();
	
}
