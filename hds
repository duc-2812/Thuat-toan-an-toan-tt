#include <stdio.h>
#include <math.h>

int a, k, n, x, p, mang[50];
int t = 0;
void nhap()
{
    printf("nhap a: ");
    scanf("%d", &a);
    printf("nhap k: ");
    scanf("%d", &k);
    printf("nhap n: ");
    scanf("%d", &n);
}

void tinh()
{
    while (k != 0)
    {
        mang[t] = k % 2;
        k = k / 2;
        t++;
    }
    for (int i = t - 1; i >= 0; i--)
    {
        printf("%5d", mang[i]);
    }
    p = 1;
    for (int i = t - 1; i >= 0; i--)
    {
        x = (p * p) % n;
        if (mang[i] == 1)
        {
            p = (x * a) % n;
        }
        else if (mang[i] == 0)
        {
            p = x;
        }
        printf("\n x=%d va p=%d ", x, p);
    }
    printf("\n ===========\n a^k mod n =%d", p);
   
}
int main()
{
    nhap();
    if (k == 0)

    {
        printf("a^k mod n = %d", 1);
    }
    else if (k != 0)
    {
        tinh();
    }
    return 0;
}
