#include <stdio.h>
#include <math.h>
#define MAX 10000

int main()
{
    char t[MAX], p[MAX];
     printf("Nhap T: ");
    gets(t);
    printf("Nhap P: ");
    gets(p);
    int m = strlen(t);
    int n = strlen(p);
    int tmp = 0;
    for (int i = 0; i < m ; i++)
    {

        int j=0;
        while(j<n && t[i+j]==p[j]){
            j++;
            tmp++;
        }
        if(j== n){
            printf("P xhien trong T tai %d\n",i);
            continue;

        }
        else {
            printf("k cos trong chuoi");
            break;
        }
        tmp++;
        if(i==m-n){
            printf("P k co trong T");
        }
    }
}
