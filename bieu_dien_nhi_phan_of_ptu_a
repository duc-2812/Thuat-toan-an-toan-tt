#include<stdio.h>
#include<math.h>

int m,p,t,w,a,tmp;

void nhap(){
	printf("Nhap W: ");
	scanf("%d",&w);
	printf("Nhap p: ");
	scanf("%d",&p);
	printf("Nhap a: ");
	scanf("%d",&a);
}

void bieuDienA(){
	m= log(p)/log(2)+1;
	t= (m/w) + 1;
	for(int i=t-1;i>=0;i--){
		tmp= a / pow(2,i*w);
		a = a- (tmp*pow(2,i*w)); 
		printf("\nHe so A[%d]: %d",i,tmp);	
	}

}
int main()
{
	nhap();
	bieuDienA();
}	
